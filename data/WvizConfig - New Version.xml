<WvizConfig>
  <ConnectionNet>
    <Mapper>
      <Features>
        <PointVisualizer>
          <T3dSymbol type="Sphere" size="0.05" normalColor="1 0 0" currentColor="1 0.4 0" highlightColor="1 1 0"/>
        </PointVisualizer>
        <TextVisualizer>
          <Label>
            <PropertyName>name</PropertyName>
          </Label>
          <Font>
            <SvgParameter name="font-family">MS Sans Serif</SvgParameter>
            <SvgParameter name="font-size">0.1</SvgParameter>
          </Font>
          <LabelPlacement>
            <PointPlacement>
              <Displacement>
                <DisplacementX>0.0</DisplacementX>
                <DisplacementY>0.1</DisplacementY>
                <DisplacementZ>0.05</DisplacementZ>
              </Displacement>
            </PointPlacement>
			
			<!-- Billboard is up for discussion!-->
            <BillboardAxis>0 0 0</BillboardAxis>
			
          </LabelPlacement>
          <Fill>
            <SvgParameter name="fill">0 0 0</SvgParameter>
          </Fill>
        </TextVisualizer>
      </Features>
      <Relations>
        <LineVisualizer>
		
		<!-- Geometry is up for discussion! -->
          <Geometry>
			<type>Ribbon</type>
			<CreaseAngle>0.785</CreaseAngle>
			<CircleTurns>24</CircleTurns>
			<HelixTurns>3</HelixTurns>
		  </Geometry>
		  <Geometry>
			<type>Curve</type>
			<CreaseAngle>0.785</CreaseAngle>
			<CircleTurns>24</CircleTurns>
			<EllipseTurns>24</EllipseTurns>
			<Ratio>1.5</Ratio>
		  </Geometry>
		  <Geometry>
			<type>Arrow</type>
			<ConeHeight>0.1</ConeHeight>
			<Ratio>5</Ratio>
		  </Geometry>		  
		  
		  
		  
          <ColorMapper>
            <InterpolationMode type="linear"/>
            <ColorPalette>
              <ColorEntry>
                <InputValue>0.0</InputValue>
                <OutputColor type="RGB">0 1 0</OutputColor>
              </ColorEntry>
			  <ColorEntry>
                <InputValue>150.0</InputValue>
                <OutputColor type="RGB">1 1 0</OutputColor>
              </ColorEntry>
              <ColorEntry>
                <InputValue>367.0</InputValue>
                <OutputColor type="RGB">1 0 0</OutputColor>
              </ColorEntry>
            </ColorPalette>
          </ColorMapper>
          <WidthMapper>
            <InterpolationMode type="linear"/>
            <WidthPalette>
              <WidthEntry>
                <InputValue>0.0</InputValue>
                <OutputWidth>0.001</OutputWidth>
              </WidthEntry>
              <WidthEntry>
                <InputValue>367.0</InputValue>
                <OutputWidth>0.01</OutputWidth>
              </WidthEntry>
            </WidthPalette>
          </WidthMapper>
        </LineVisualizer>
      </Relations>
    </Mapper>
  </ConnectionNet>
</WvizConfig>